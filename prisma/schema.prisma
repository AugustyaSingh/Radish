generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String      @id @default(cuid())
  email            String      @unique
  name             String?
  bio              String?
  avatar           String?     @default("/avatars/radish-1.png")
  
  // Gamification Stats
  role             String      @default("USER")
  level            Int         @default(1)
  xp               Int         @default(0)
  streak           Int         @default(0)
  lastActionDate   DateTime?
  
  // Environmental Impact Stats
  totalCarbonSaved Float       @default(0)
  totalWaterSaved  Float       @default(0)
  totalWasteSaved  Float       @default(0)

  // Relations
  actions          Action[]
  insights         AIInsight[]
  
  // Social (Simple follow system)
  following        Follows[]   @relation("follower")
  followers        Follows[]   @relation("following")

  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

model Action {
  id        String   @id @default(cuid())
  type      String   // RECYCLE, COMPOST, REFILL, TRANSIT
  points    Int
  
  // Impact Metadata
  carbon    Float    @default(0)
  water     Float    @default(0)
  waste     Float    @default(0)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model AIInsight {
  id        String   @id @default(cuid())
  type      String   // TIP, FACT, MISSION
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Follows {
  followerId  String
  followingId String
  follower    User   @relation("follower", fields: [followerId], references: [id])
  following   User   @relation("following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}
